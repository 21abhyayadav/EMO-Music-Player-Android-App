<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#263238"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_fragment_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#263238"
        tools:context="com.music.player.emo.FragmentHome">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_alignParentTop="true" />
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_185sdp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentLeft="true"
                android:text="LOCAL MP3 SONGS"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="See all"
                android:textColor="@color/colorAccent"
                android:onClick="openLocal"
                android:background="#00000000"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_140sdp"
                        card_view:cardCornerRadius="@dimen/_5sdp"

                        card_view:cardBackgroundColor="#bb000000"
                        android:clickable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/localSong1"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/localIv1"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:textSize="@dimen/_13sdp"
                                android:id="@+id/localTv1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_alignBottom="@id/localIv1"
                                android:background="#e6ffffff"
                                android:textColor="#000000"
                                android:maxLines="1"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"                        android:layout_height="@dimen/_140sdp"
                        card_view:cardCornerRadius="@dimen/_5sdp"
                        card_view:cardBackgroundColor="#bb000000"
                        android:clickable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/localSong2"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/localIv2"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:textSize="@dimen/_13sdp"
                                android:id="@+id/localTv2"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_alignBottom="@id/localIv2"
                                android:background="#e6ffffff"
                                android:textColor="#000000"
                                android:maxLines="1"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="@dimen/_140sdp"
                        card_view:cardCornerRadius="@dimen/_5sdp"
                        card_view:cardBackgroundColor="#bb000000"
                        android:clickable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/localSong3"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/localIv3"
                                android:layout_centerInParent="true"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:textSize="@dimen/_13sdp"
                                android:id="@+id/localTv3"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_alignBottom="@id/localIv3"
                                android:background="#e6ffffff"
                                android:textColor="#000000"
                                android:maxLines="1"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_140sdp"
                        card_view:cardCornerRadius="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"                        card_view:cardBackgroundColor="#bb000000"
                        android:clickable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/localSong4"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/localIv4"
                                android:layout_centerInParent="true"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:textSize="@dimen/_13sdp"
                                android:id="@+id/localTv4"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_alignBottom="@id/localIv4"
                                android:background="#e6ffffff"
                                android:textColor="#000000"
                                android:maxLines="1"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_140sdp"
                        card_view:cardCornerRadius="@dimen/_5sdp"
                                                card_view:cardBackgroundColor="#bb000000"
                        android:clickable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/localSong5"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/localIv5"
                                android:layout_centerInParent="true"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:textSize="@dimen/_13sdp"
                                android:id="@+id/localTv5"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_alignBottom="@id/localIv5"
                                android:background="#e6ffffff"
                                android:textColor="#000000"
                                android:maxLines="1"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_140sdp"
                        card_view:cardCornerRadius="@dimen/_5sdp"
                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="#bb000000"
                        android:clickable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/localSong6"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/localIv6"
                                android:layout_centerInParent="true"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:textSize="@dimen/_13sdp"
                                android:id="@+id/localTv6"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_alignBottom="@id/localIv6"
                                android:background="#e6ffffff"
                                android:textColor="#000000"
                                android:maxLines="1"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/recRel"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentLeft="true"
                android:text="RECENTLY PLAYED"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="See all"
                android:textColor="@color/colorAccent"
                android:onClick="openRecentFragment"
                android:background="#00000000"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:id="@+id/recScroll"
            android:layout_height="@dimen/_150sdp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:id="@+id/RecCard1"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:clickable="true"

                    card_view:cardCornerRadius="@dimen/_5sdp"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="#bb000000">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/recentSong1"

                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/recentIv1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter" />
                        <TextView
                            android:id="@+id/recentTv1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignBottom="@id/recentIv1"
                            android:layout_gravity="center_vertical"
                            android:background="#e6ffffff"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="#000000"
                            android:textSize="@dimen/_13sdp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/RecCard2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="@dimen/_5sdp"

                    android:clickable="true"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="#bb000000">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/recentSong2"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/recentIv2"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:textSize="@dimen/_13sdp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:id="@+id/recentTv2"
                            android:textColor="#000000"
                            android:layout_alignBottom="@id/recentIv2"
                            android:maxLines="1"
                            android:background="#e6ffffff"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/RecCard3"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:clickable="true"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="#bb000000">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/recentSong3"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/recentIv3"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignBottom="@id/recentIv3"
                            android:textSize="@dimen/_13sdp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:id="@+id/recentTv3"
                            android:maxLines="1"
                            android:textColor="#000000"
                            android:background="#e6ffffff"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/FavRel">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="FAVOURITES"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="See all"
                android:onClick="openFavoriteFragment"
                android:textColor="@color/colorAccent"
                android:background="#00000000"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:id="@+id/FavScroll"
            android:visibility="gone"
            android:layout_marginBottom="70dp"
            android:layout_height="@dimen/_150sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/_140sdp"
                android:id="@+id/FavCard1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                card_view:cardCornerRadius="@dimen/_5sdp"
                android:visibility="gone"
                card_view:cardBackgroundColor="#bb000000"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/favourSong1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/favoriteIv1"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignBottom="@id/favoriteIv1"
                        android:textSize="@dimen/_13sdp"
                        android:gravity="center"
                        android:id="@+id/favoriteTv1"
                        android:layout_gravity="center_vertical"
                        android:background="#e6ffffff"
                        android:textColor="#000000"
                        android:maxLines="1"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/FavCard2"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="@dimen/_5sdp"
                card_view:cardBackgroundColor="#bb000000"
                android:clickable="true"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/favourSong2"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/favoriteIv2"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignBottom="@id/favoriteIv2"
                        android:textSize="@dimen/_13sdp"
                        android:id="@+id/favoriteTv2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="#e6ffffff"
                        android:textColor="#000000"
                        android:maxLines="1"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/_140sdp"
                android:id="@+id/FavCard3"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                card_view:cardBackgroundColor="#bb000000"
                android:clickable="true"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/favourSong3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/favoriteIv3"
                        android:layout_centerInParent="true"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:textSize="@dimen/_13sdp"
                        android:id="@+id/favoriteTv3"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_alignBottom="@id/favoriteIv3"
                        android:background="#e6ffffff"
                        android:textColor="#000000"
                        android:maxLines="1"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        </HorizontalScrollView>
      </LinearLayout>
</ScrollView>